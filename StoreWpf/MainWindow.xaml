<Window x:Class="StoreWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Label Content="Item Name"></Label>
            <TextBox x:Name="txtItemName"></TextBox>

            <Label Content="Item Price"></Label>
            <TextBox x:Name="txtItemPrice"></TextBox>

            <Button Height="20" Content="Add" Click="Button_Click"></Button>
        </StackPanel>
        
        <DataGrid x:Name="gvItems" Grid.Row="1">

        </DataGrid>
    </Grid>
</Window>
